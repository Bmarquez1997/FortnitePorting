<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:FortnitePorting.Launcher.ViewModels"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:ext="clr-namespace:FortnitePorting.Shared.Extensions;assembly=FortnitePorting.Shared"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:controls="clr-namespace:FortnitePorting.Shared.Controls;assembly=FortnitePorting.Shared"
             xmlns:views="clr-namespace:FortnitePorting.Launcher.Views"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:downloads="clr-namespace:FortnitePorting.Launcher.Models.Downloads"
             xmlns:installation="clr-namespace:FortnitePorting.Launcher.Models.Installation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="FortnitePorting.Launcher.Views.RepositoriesView"
             x:DataType="viewModels:RepositoriesViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="{ext:Space 1}"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ItemsControl Grid.Row="0" ItemsSource="{Binding Repositories}" Margin="{ext:Space 1}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:SettingsExpander Header="{Binding Title}" Description="{Binding Description}" 
                                         Margin="{ext:Space 0, 0, 0, 1}">
                        <ui:SettingsExpander.IconSource>
                            <ui:ImageIconSource Source="{Binding IconImage.Result}"/>
                        </ui:SettingsExpander.IconSource>
                        <ui:SettingsExpander.Footer>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="{avalonia:MaterialIconExt Delete}" 
                                        Command="{Binding $parent[views:RepositoriesView].((viewModels:RepositoriesViewModel)DataContext).Delete}"
                                        CommandParameter="{Binding $self.DataContext}" ToolTip.Tip="Remove"
                                        Classes="RedButton"/>
                            </StackPanel>
                        </ui:SettingsExpander.Footer>
                    </ui:SettingsExpander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <TextBlock Grid.Row="0" Text="No Repositories Found" IsVisible="{Binding !Repositories.Count}"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Classes="BodyTextBlockStyle TextFillColorTertiaryBrush"/>
        
        <ui:FABorder Grid.Row="2" CornerRadius="0" Padding="{ext:Space 1}" Background="#22000000">
            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Command="{Binding AddRepository}">
                <controls:IconText Icon="Add" Text="Add Repository"/>
            </Button>
        </ui:FABorder>
        
    </Grid>
</UserControl>
